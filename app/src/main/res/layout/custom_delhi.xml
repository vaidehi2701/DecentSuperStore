            <TextView
                android:id="@+id/tvBranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Delhi-NCR Branch"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--android:layout_below="@+id/ivProfileImage"-->

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBranchName"
                android:layout_margin="10dp"
                android:weightSum="100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="Khasra No - 147/1-2-3,
                                        Village Bamnoli, Sector - 28, Dwarka,
                            New Delhi-110 061"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llAddress"
                android:layout_margin="10dp"
                android:weightSum="100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="Tel: 1860-123-1000"
                    android:textColor="#000000" />

            </LinearLayout>


</RelativeLayout>